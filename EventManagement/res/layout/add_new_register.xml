             android:inputType="textEmailAddress"/>
        
        <EditText
            android:id="@+id/fee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_below="@+id/email4"
            android:hint="Amount Paid"
            android:inputType="number"  />
        
        
        <EditText
            android:id="@+id/regmob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_below="@+id/fee"
            android:hint="Registered by(mob no.)"
            android:inputType="number" />
        
            </RelativeLayout>

</LinearLayout>
</ScrollView>